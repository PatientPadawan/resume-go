package templates

templ footer() {
	<section class="mx-auto">
		// TODO: Implement PDF print
		<button class="text-sm">printable version</button>
	</section>
}

templ Layout() {
	<!DOCTYPE html>
	<html lang="en">
		@Head("Padawan Resume")
		<body class="flex flex-col h-full w-full bg-light dark:bg-dark text-dim dark:text-lite">
			@Header()
			<main>
				@Experience()
				@Education()
				@Certifications()
				@Skills()
			</main>
			@footer()
		</body>
	</html>
}
