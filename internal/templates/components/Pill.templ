package templates

templ Pill(list []string) {
  <div class="flex flex-wrap gap-2 w-5/6 py-4">
    for _, item := range list {
      <span class="inline-block px-3 py-1 text-sm font-semibold text-dim dark:text-lite bg-muted-blue dark:bg-soft-blue rounded-full transition-colors hover:bg-coral dark:hover:bg-muted-coral">
        { item }
      </span>
    }
  </div>
}